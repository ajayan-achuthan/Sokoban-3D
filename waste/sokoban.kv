<SokobanGame>:
    cols: 4
    rows: 4
    player_pos: [2, 1]
    boxes: [[1, 1], [3, 1]]
    goals: [[2, 0], [3, 0]]

<Button>:
    font_size: 24
    color: 0, 0, 0, 1

GridLayout:
    cols: 1

    SokobanGame:
        id: game

    GridLayout:
        cols: 4
        size_hint_y: None
        height: 50

        Button:
            text: 'Up'
            on_press: game.move_player('up')

        Button:
            text: 'Left'
            on_press: game.move_player('left')

        Button:
            text: 'Right'
            on_press: game.move_player('right')

        Button:
            text: 'Down'
            on_press: game.move_player('down')
