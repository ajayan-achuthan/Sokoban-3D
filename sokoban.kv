#:import utils kivy.utils
ScreenManager:
    MainScreen:
    NewGameScreen:
    LevelScreen:
    GameScreen:

<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Button:
            text: 'SOKOBAN'
            size_hint_y:  0.3
            on_release: app.new_game(self)
        Button:
            text: 'New game'
            size_hint_y:  0.14
            on_release: app.new_game(self)
        Button:
            text: 'Continue game'
            size_hint_y:  0.14
            on_release: app.continue_game(self)
        Button:
            text: 'Settings'
            size_hint_y:  0.14
            on_release: app.settings(self)
        Button:
            text: 'High scores'
            size_hint_y:  0.14
            on_release: app.high_scores(self)
        Button:
            text: 'Exit'
            size_hint_y:  0.14
            on_release: app.exit(self)

<NewGameScreen>:
    name: 'new_game'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: 'CHOOSE A COLLECTION'
            size_hint_y: None
            height: 50

        ScrollView:
            BoxLayout:
                id: collection_grid
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

        Button:
            text: 'Back'
            size_hint_y: None
            height: 50
            on_release: app.back_to_main(self)

<LevelScreen>:
    name: 'levels'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: root.collection_name
            size_hint_y: None
            height: 50

        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

                GridLayout:
                    id: level_grid
                    cols: 4
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 10



        Button:
            text: 'Back'
            size_hint_y: None
            height: 50
            on_release: app.back_to_new_game(self)
<GameScreen>:
    name: 'game'
    padding: 30
    canvas:
        Color:
            rgba: utils.get_color_from_hex('#fbf8ef')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding_y: 
        spacing: 0
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y : 0.15
            Label:
                text: " "
                background_color: 0, 0, 0, 0
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y : 0.12
            BoxLayout:
                orientation: 'vertical'
                size_hint_x : 0.5
                Button:
                    text:'Level '+ root.level_name 
                    color : (119, 111, 101, 1)
                    font_name : 'clearsans'
                    font_size: 50
                    markup: True
                    halign :"left"
                    valign : "middle"
                Button:
                    text:'Level '+ root.level_name 
                    color : (119, 111, 101, 1)
                    font_name : 'clearsans'
                    font_size: 18
                    markup: True
                    halign :"left"
                    valign : "middle"
            Button:
                text:
                    '[size=18]' + 'PUSHES' + '[/size]' + \
                    '\n[size=40]' + root.pushes + '[/size]'
                size_hint_x : 0.25
                color : (119, 111, 101, 1)
                font_name : 'clearsans'
                halign: 'center'
                markup: True
            Button:
                text:
                    '[size=18]' + 'PUSHES' + '[/size]' + \
                    '\n[size=40]' + root.pushes + '[/size]'
                size_hint_x : 0.25
                color : (119, 111, 101, 1)
                font_name : 'clearsans'
                halign: 'center'
                markup: True
        GridLayout:
            id :game_grid
            cols :1
            size_hint_y :0.45
        GridLayout:
            cols :7
            size_hint_y :0.23
            Button:
                text :'Up'
                on_press: root.game.move(0,-1, True)
            Button:
                text:'Left'
                on_press: root.game.move(-1,0, True)
            Button
                text:'Right'
                on_press: root.game.move(1,0, True)
            Button:
                text:'Down'
                on_press: root.game.move(0,1, True)
            Button
                text:'Undo'
                on_press:x: root.game.unmove()
            Button:
                text:'Reset'
                on_press: root.game.reset()
            Button:
                text:'Back'
                on_press:app.back_to_show_levels()
            

        
